{
  "extends": "next/core-web-vitals",

  // Añade formatjs a la lista de plugins de ESLint
  "plugins": ["formatjs"],
  // Añade la regla formatjs/enforce-id a la lista de reglas de ESLint
  "rules": {
    "formatjs/enforce-id": [
      "error",
      {
        "idInterpolationPattern": "[sha512:contenthash:base64:6]"
      }
    ]
  }
}
